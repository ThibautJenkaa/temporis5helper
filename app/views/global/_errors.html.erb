<% if obj.errors.any? %>
    <div class="errors-box">
        <p>Erreurs: </p>
        <ul>
            <% obj.errors.full_messages.each do |msg| %>
                <li><%= msg %></li>
            <% end %>
        </ul>
        <button>
            <%= fa_icon "times" %>
        </button>
    </div>
<% end %>