<h2>Se connecter</h2>

<%= form_with scope: :session, url: login_path, class: "form-sign-up" do |f| %>
    <div class="form-group">
        <%= f.label :email, "Email:" %>
        <%= f.email_field :email %>
    </div>
    <div class="form-group">
        <%= f.label :password, "Mot de passe:" %>
        <%= f.password_field :password %>
    </div>
    <%= f.submit "Se connecter", class: "sumbit" %>
<% end %>